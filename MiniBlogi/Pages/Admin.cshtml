@page "{username?}"
@using Microsoft.AspNetCore.Identity
@using MiniBlogi.Models;
@inject UserManager<ApplicationUser> AdminManager
@model MiniBlogi.Pages.Blog.AdminModel
@{
}


<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-page-handler="Delete" method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>